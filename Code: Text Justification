# Attempting to break on spaces and never in the middle of a word


import tkinter as tk

def get_text_widget_width(text_widget):
    return text_widget.winfo_width()

def justify_text(event):
    new_width = event.width
    text = text_widget.get("1.0", "end-1c")
    justified_text = justify_text_helper(text, new_width)
    text_widget.delete("1.0", "end")
    text_widget.insert("1.0", justified_text)

def justify_text_helper(text, width):
    words = text.split()
    justified_lines = []
    current_line = ''
    for word in words:
        if len(current_line) + len(word) + 1 <= width:  # Check if word can fit in current line
            if current_line:  # Add space if not first word in line
                current_line += ' '
            current_line += word
        else:
            # Find the last word that completely fits on the line
            last_full_word = ''
            for w in reversed(current_line.split()):
                if len(last_full_word) + len(w) + 1 <= width:
                    last_full_word = w + ' ' + last_full_word if last_full_word else w
                else:
                    break
            
            # Distribute remaining spaces evenly across the line
            num_spaces_needed = width - len(current_line)
            remaining_spaces = num_spaces_needed % (len(current_line.split()) - 1) if len(current_line.split()) > 1 else 0
            space_per_gap = num_spaces_needed // (len(current_line.split()) - 1) if len(current_line.split()) > 1 else 0
            
            justified_line = last_full_word
            for w in current_line.split():
                if w != last_full_word:
                    justified_line += ' ' * (space_per_gap + (1 if remaining_spaces > 0 else 0)) + w
                    remaining_spaces -= 1
            justified_lines.append(justified_line)
            current_line = word if len(word) >= width else ' ' + word
    if current_line:  # Add the last line
        justified_lines.append(current_line)

    justified_text = '\n'.join(justified_lines)
    return justified_text

# Example usage:
root = tk.Tk()

text_widget = tk.Text(root)
text_widget.pack(fill="both", expand=True)

text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
text_widget.insert("1.0", text)

root.bind("<Configure>", justify_text)

root.mainloop()

