# Trying to reduce gaps between words


import tkinter as tk

def get_text_widget_width(text_widget):
    return text_widget.winfo_width()

def justify_text(event):
    new_width = event.width
    text = text_widget.get("1.0", "end-1c")
    justified_text = justify_text_helper(text, new_width)
    text_widget.delete("1.0", "end")
    text_widget.insert("1.0", justified_text)

def justify_text_helper(text, width):
    lines = text.split('\n')
    justified_lines = []
    for line in lines:
        words = line.split()
        if len(words) == 1 or len(line) > width:
            justified_lines.append(line)
        else:
            num_words = len(words)
            total_word_length = sum(len(word) for word in words)
            spaces_needed = width - total_word_length
            num_gaps = num_words - 1
            if num_gaps == 0:
                justified_lines.append(words[0])
            else:
                base_spaces = spaces_needed // num_gaps
                extra_spaces = spaces_needed % num_gaps
                spaces = [' ' * base_spaces + (' ' if i < extra_spaces else '') for i in range(num_gaps)]
                justified_lines.append(''.join(word + space for word, space in zip(words, spaces)) + words[-1])
    justified_text = '\n'.join(justified_lines)
    return justified_text

# Example usage:
root = tk.Tk()

text_widget = tk.Text(root)
text_widget.pack(fill="both", expand=True)

text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
text_widget.insert("1.0", text)

root.bind("<Configure>", justify_text)

root.mainloop()

