"""
A drop-down menu featuring checkbuttons that revert to a default value when they are all deactivated.
"""

from tkinter import *

def change_canvas_color(color):
    canvas.config(bg=color)

def checkbutton_selected(index):
    var = checkbutton_vars[index]
    if var.get():
        for i, v in enumerate(checkbutton_vars):
            if i != index:
                v.set(False)
        change_canvas_color(colors[index])
    else:
        var.set(False)
        update_canvas_color()

def update_canvas_color():
    active_indices = [i for i, var in enumerate(checkbutton_vars) if var.get()]
    
    if not active_indices:
        change_canvas_color(default_color)
    else:
        change_canvas_color(colors[active_indices[0]])

# Create the main window
root = Tk()
root.title("Checkbutton Menu Example")

# Create a drop-down menu
menu_bar = Menu(root)
root.config(menu=menu_bar)

# Create a submenu for checkbuttons
submenu = Menu(menu_bar, tearoff=0)
menu_bar.add_cascade(label="Options", menu=submenu)

# Create BooleanVar variables for checkbuttons
checkbutton_vars = []
options = ["Red", "Green", "Blue"]

for option in options:
    var = BooleanVar()
    checkbutton_vars.append(var)
    submenu.add_checkbutton(label=option, variable=var, command=lambda idx=options.index(option): checkbutton_selected(idx))

# Create a canvas
default_color = "white"
colors = ["red", "green", "blue"]
canvas = Canvas(root, bg=default_color, width=200, height=200)
canvas.grid(row=0, column=0, columnspan=len(options))

# Start the main loop
root.mainloop()

