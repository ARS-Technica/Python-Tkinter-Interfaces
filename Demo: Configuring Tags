# -*- coding: utf-8 -*-
"""
How to alter Tkinter elements by configuring tags.
"""

import tkinter as tk


def create_widget(root):
    """
    Creates a label widget and stores it globally.
    """
    
    global my_label

    my_label = tk.Label(root, text="Initial Text")
    my_label.pack()


def configure_widget():
    """
    Configures the label widget created in create_widget.
    """
    
    global my_label
    
    my_label.config(text="Updated Text", fg="red")


if __name__ == "__main__":
    root = tk.Tk()

    create_widget(root)
    button = tk.Button(root, text="Update Label", command=configure_widget)
    button.pack()

    root.mainloop


