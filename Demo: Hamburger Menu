"""
A demonstration of how to make a simple hamburger menu common in mobile apps
using only Python's Tkinter library.
"""

import tkinter as tk
from tkinter import PhotoImage
from PIL import Image, ImageDraw, ImageTk  # For Close ("X") icon

def create_hamburger_icon():
    # Create a 32x32 image with a transparent background
    icon = Image.new("RGBA", (32, 32), (0, 0, 0, 0))
    draw = ImageDraw.Draw(icon)

    # Draw three parallel lines to represent the hamburger icon
    draw.line((5, 12, 27, 12), fill="black", width=3)
    draw.line((5, 18, 27, 18), fill="black", width=3)
    draw.line((5, 24, 27, 24), fill="black", width=3)

    # Convert the PIL Image to a Tkinter PhotoImage
    icon_photo = ImageTk.PhotoImage(icon)

    return icon_photo

def create_close_icon():
    # Create a 32x32 image with a transparent background
    icon = Image.new("RGBA", (32, 32), (0, 0, 0, 0))
    draw = ImageDraw.Draw(icon)

    # Draw an X shape
    draw.line((5, 5, 27, 27), fill="black", width=3)
    draw.line((5, 27, 27, 5), fill="black", width=3)

    # Convert the PIL Image to a Tkinter PhotoImage
    icon_photo = ImageTk.PhotoImage(icon)

    return icon_photo


root = tk.Tk()
root.title("Tkinter Hamburger Menu") 
root.geometry("500x500")


# Create the hamburger icon with images
# navIcon = PhotoImage(file="C:\Python\Python38-32\Programs\Tkinter\menu.png")
# closeIcon = PhotoImage(file="C:\Python\Python38-32\Programs\Tkinter\close.png")

# Create the hamburger icon with Unicode
# The hamburger icon (â˜°) is represented by the Unicode character text="\u2630"

# Create the hamburger icon programmatically
navIcon = create_hamburger_icon()
close_icon = create_close_icon()


top_border_frame = tk.Frame(root, bg="orange", height=10)  # Purely aesthetic)
top_border_frame.pack(fill=tk.X, side="top")

header_label = tk.Label(top_border_frame, text="LOGO", font=('Arial', 13), bg="orange", fg="black", height=2, padx=20)
header_label.pack(side="right")


first_indicator = tk.Label(root, text="Insert \nWidget Here", font=('Arial', 26), bg="gray", fg="black")
first_indicator.place(x=150, y=250)


navigation_button = tk.Button(top_border_frame, image=navIcon, bg="orange", activebackground="orange", bd=0, padx=20)
navigation_button.place(x=10, y=10)

navigation_frame = tk.Frame(root, bg="gray", height=1000, width=300)
navigation_frame.place(x=-300, y=0)
tk.Label(navigation_frame, font=('Arial', 13), bg="orange", fg="black", height=2, width=300, padx=20).place(x=0, y=0)


root.mainloop()

