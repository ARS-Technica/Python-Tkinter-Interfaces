"""
Demonstration of a basic Progress Bar
"""

import time
from tkinter import *
from tkinter.ttk import *

def progress_bar():
    for i in range(1,101,1):
        progress['value'] = i
        root.update_idletasks()
        blank_label.config(text=str(i)+"%")
        time.sleep(0.03)

    progress['value'] = 100
    root.destroy()

def create_window():
    global start_button, blank_label, progress

    blank_label = Label(root, text="", font="arial 15 bold")
    blank_label.pack(padx=80)
    
    progress_bar_style = Style()
    progress_bar_style.configure("TProgressbar", foreground='#09BF14', background='#09BF14', thickness=100)
    
    progress = Progressbar(root, style="TProgressbar", length=700, mode='determinate')
    progress.pack(pady=10,padx=5)
    
    start_button = Button(root, text='Start', command=progress_bar)
    start_button.pack(pady=10)

if __name__ == "__main__":
    root = Tk()
    root.title("Progress Bar Demonstration")
    root.geometry("750x250")

    create_window()
    mainloop()

