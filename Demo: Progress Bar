"""
Demonstration of a basic Progress Bar
"""

import time
import threading
import tkinter as tk
from tkinter import *
from tkinter import font
from tkinter import ttk


root = tk.Tk()
percentage = IntVar()
pause = 0

def progress_bar_thread():
    global pause

    pause = 0 # To resume progress bar
    thread1 = threading.Thread(target=start_progress_bar)
    thread1.start()

def start_progress_bar():
    global percentage

    # When resuming progress bar, start where the progress left off
    if percentage.get() > 0:
        startVal = percentage.get()
    else:
        startVal = 0
    
    for i in range(startVal, 101):  # Use startVal rather than 0 in case of resume
        if pause == 1:
            break
        else:
            percentage.set(i)
            time.sleep(0.05)
 
def stop_progress_bar():
    global pause

    pause = 1

def window():
    progress_bar = ttk.Progressbar(root, max=100.0, variabl=percentage, length=400)
    progress_bar.pack(pady=20)

    Label(root, textvariable=percentage, font="arial 15 bold").pack()

    Button(root, text="Start", font=("Arial", 12), command=progress_bar_thread).pack(pady=20)
    Button(root, text="Stop",font=("Arial", 12), command=stop_progress_bar).pack(pady=20)

if __name__ == "__main__":
    root.geometry("500x250")
    root.title("Progressbar")

    window()
    root.mainloop()

