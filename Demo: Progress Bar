"""
Demonstration of a basic Progress Bar
"""

import time
import threading
from tkinter import *
from tkinter.ttk import *

def progress_bar():
    total_steps = 100
    delay = 0.03

    for i in range(1, total_steps + 1):
        progress['value'] = i
        root.update_idletasks()
        percentage_label.config(text=f"{i}%")
        time.sleep(delay)

    progress['value'] = 100
    root.after(500, root.destroy)  # Delay the destruction of the window to show completion

def create_window():
    global percentage_label, progress, start_button

    progress_bar_style = Style()
    progress_bar_style.configure("TProgressbar", thickness=100)

    progress = Progressbar(root, style="TProgressbar", length=700, mode='determinate')
    progress.pack(pady=10, padx=5)

    percentage_label = Label(root, text="", font="arial 15 bold")
    percentage_label.pack(pady=10)

    start_button = Button(root, text='Start', command=lambda: threading.Thread(target=progress_bar).start())
    start_button.pack(pady=10)

if __name__ == "__main__":
    root = Tk()
    root.title("Progress Bar Demonstration")
    root.geometry("750x250")

    create_window()
    mainloop()

