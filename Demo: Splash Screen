"""
A demonstration of a simple Splash Screen using the Tkinter library.

Inspired by the Codemy.com tutorial: https://www.youtube.com/watch?v=LTVvHObxc4E
"""

from tkinter import *

def splash_screen():
    splash_root = Tk()
    splash_root.title("Splash Screen")
    splash_root.geometry("300x200+250+250")
    # Hide the title bar
    splash_root.overrideredirect(True)

    # Splash Screen Content
    splash_label = Label(splash_root, text="Splash Screen!", font=("Helvetica", 18))
    splash_label.pack(pady=20)

    # Splash Screen Timer
    splash_root.after(3000, splash_root.destroy)
    splash_root.mainloop()

def main_window():
    root = Tk()
    root.title("Splash Screen Demo")
    root.geometry("500x550")

    # Main Window Content
    main_label = Label(root, text="Main Screen", font=("Helvetica", 18))
    main_label.pack(pady=20)

    root.mainloop()

if __name__ == "__main__":
    splash_screen()
    main_window()

